# Define group app
upstream app {
  # Define server app
  server app:8000;
}

# Server
server {
  listen 8000;
  charset utf-8;

  client_max_body_size 50M;

  # Domain localhost
  server_name localhost;

  # Handle favicon.ico
  location = /favicon.ico {
    return 204;
    access_log off;
    log_not_found off;
  }

  # Django app
  location / {
    proxy_pass http://app;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_redirect off;
  }

  # Serve os arquivos estáticos
  location /static/ {
    alias /app/staticfiles/;
  }

  # Serve os arquivos de mídia
  location /media/ {
    alias /app/media/;
  }
}
